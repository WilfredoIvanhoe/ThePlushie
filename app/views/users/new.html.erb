<h1>Nuevo registro</h1>
<% if @user.errors.any? %>
	<h1>¡Atención!</h1>
	<% @user.errors.full_messages.each do |e| %>
	<li><%= e %></li>
	<% end %>
<% end %>
<%= form_for :users, url: '/users', method: 'POST'  do |f| %>
<h1>Registro</h1>
<p>
	<%= f.label :email %>
	<br>
	<%= f.text_field :mail %>
</p>
<p>
	<%= f.label :Contraseña %>
	<br>
	<%= f.password_field :password %>
</p>
<p>
	<%= f.label :arduino_id %>
	<br>
	<%= f.text_field :arduino_id %>
</p>
	<%= f.submit %>
<% end %>